<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.constraint.ConstraintLayout tools:context="bigoudy.bigoudypro.MeetingDetailFragment"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/con"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- TODO: Update blank fragment layout -->




        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingActionButtonGps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="105dp"
            android:clickable="true"
            app:fabSize="mini"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/relativeLayout"
            app:srcCompat="@mipmap/shape_copy" />



        <ImageView
            android:id="@+id/imageViewComments"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewCloche"
            app:srcCompat="@mipmap/view_headline"
            android:layout_marginStart="32dp" />

        <ImageView
            android:id="@+id/imageViewCloche"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewAdress"
            app:srcCompat="@mipmap/notifications_copie"
            android:layout_marginStart="32dp" />

        <TextView
            android:id="@+id/textViewAdress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="32dp"
            android:text="adresse"
            android:textSize="18dp"
            app:layout_constraintLeft_toRightOf="@+id/imageViewAdress"
            app:layout_constraintTop_toBottomOf="@+id/imageViewClock"
            android:layout_marginStart="32dp" />

        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="217dp"
            android:layout_height="24dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="40dp"
            android:text="heure"
            android:textSize="18dp"
            app:layout_constraintLeft_toRightOf="@+id/imageViewClock"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
            android:layout_marginStart="32dp" />

        <ImageView
            android:id="@+id/imageViewClock"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
            app:srcCompat="@mipmap/clock_copy_3"
            android:layout_marginStart="32dp" />

        <ImageView
            android:id="@+id/imageViewAdress"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewClock"
            app:srcCompat="@mipmap/place"
            android:layout_marginStart="32dp" />

        <TextView
            android:id="@+id/textViewRappel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="32dp"
            android:text="alerte"
            android:textSize="18dp"
            app:layout_constraintLeft_toRightOf="@+id/imageViewCloche"
            app:layout_constraintTop_toBottomOf="@+id/imageViewAdress"
            android:layout_marginStart="32dp" />

        <TextView
            android:id="@+id/textViewComments"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:text="comment "
            android:textSize="18dp"
            app:layout_constraintLeft_toRightOf="@+id/imageViewComments"
            app:layout_constraintTop_toBottomOf="@+id/imageViewCloche" />

        <ImageView
            android:id="@+id/imageViewPrice"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@mipmap/copy_3"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewComments"
            android:layout_marginStart="32dp" />

        <TextView
            android:id="@+id/textViewPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="prix"
            android:textSize="18dp"
            app:layout_constraintLeft_toRightOf="@+id/imageViewPrice"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewComments"
            android:layout_marginStart="32dp" />

        <ImageView
            android:id="@+id/imageViewPhoto"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewPrice"
            app:srcCompat="@mipmap/camera_alt" />

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:background="@color/bigoudymediumgold"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textViewName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textViewLibPerf"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="11dp"
                android:layout_marginStart="36dp"
                android:text="TextView"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewLibPerf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/textViewName"
                android:layout_marginBottom="38dp"
                android:text="TextView"
                android:textSize="20dp" />

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imageViewAvatar"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="59dp"
                android:layout_marginLeft="31dp"
                android:src="@mipmap/logobigoudy"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintTop_creator="1" />

        </RelativeLayout>

        <GridView
            android:id="@+id/gridViewDiagnostic"
            android:layout_width="250dp"
            android:layout_height="600dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:numColumns="2"
            android:gravity="center"
            android:stretchMode="columnWidth"
            android:verticalSpacing="10dp"
            android:horizontalSpacing="10dp"
            app:layout_constraintLeft_toRightOf="@+id/imageViewPhoto"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewPhoto" />


    </android.support.constraint.ConstraintLayout>
</ScrollView>