<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bigoudy.bigoudypro.MeetingDetailFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButtonGps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="105dp"
        android:clickable="true"
        app:fabSize="mini"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/relativeLayout"
        app:srcCompat="@mipmap/shape_copy" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="125dp"
        android:background="@color/bigoudymediumgold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/relativeLayout"
        app:layout_constraintHorizontal_bias="0.0">

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_marginStart="36dp"
            android:layout_above="@+id/textViewLibPerf"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="11dp" />

        <TextView
            android:id="@+id/textViewLibPerf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textViewName"
            android:layout_marginBottom="38dp" />

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imageViewAvatar"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="59dp"
            android:layout_marginLeft="31dp"
            android:src="@mipmap/logobigoudy"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintTop_creator="1" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="450dp"
        android:layout_marginTop="12dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

        <ImageView
            android:id="@+id/imageViewComments"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignStart="@+id/imageViewCloche"
            android:layout_below="@+id/imageViewCloche"
            android:layout_marginTop="32dp"
            app:srcCompat="@mipmap/view_headline" />

        <ImageView
            android:id="@+id/imageViewCloche"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignStart="@+id/imageViewAdress"
            android:layout_below="@+id/imageViewAdress"
            android:layout_marginTop="32dp"
            app:srcCompat="@mipmap/notifications_copie" />

        <TextView
            android:id="@+id/textViewAdress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageViewAdress"
            android:layout_alignStart="@+id/textViewDate"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageViewClock"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="19dp"
            android:layout_toEndOf="@+id/imageViewClock"
            android:textSize="18dp"
            app:layout_constraintLeft_toRightOf="@+id/imageViewClock"
            tools:layout_editor_absoluteY="166dp" />

        <ImageView
            android:id="@+id/imageViewClock"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="33dp"
            android:layout_marginTop="42dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@mipmap/clock_copy_3" />

        <ImageView
            android:id="@+id/imageViewAdress"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignStart="@+id/imageViewClock"
            android:layout_below="@+id/imageViewClock"
            android:layout_marginTop="35dp"
            app:srcCompat="@mipmap/place" />

        <TextView
            android:id="@+id/textViewRappel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageViewCloche"
            android:layout_alignStart="@+id/textViewAdress"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textViewComments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageViewComments"
            android:layout_alignStart="@+id/textViewRappel"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/imageViewPrice"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignStart="@+id/imageViewComments"
            android:layout_below="@+id/imageViewComments"
            android:layout_marginTop="30dp"
            app:srcCompat="@mipmap/copy_3" />

        <TextView
            android:id="@+id/textViewPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageViewPrice"
            android:layout_alignStart="@+id/textViewComments"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/imageViewPhoto"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/imageViewPrice"
            android:layout_marginTop="32dp"
            app:srcCompat="@mipmap/camera_alt" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
